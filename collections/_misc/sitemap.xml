---
permalink: /sitemap.xml
---

<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.sitemaps.org/schemas/sitemap/0.9 http://www.sitemaps.org/schemas/sitemap/0.9/sitemap.xsd" xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">

    {%- assign index_pages = site.pages | where_exp: 'item', 'item.index == noindex' -%}
    {%- for page in index_pages -%}
        <url>
            <loc>{{ page.url | absolute_url }}</loc>
            <lastmod>{{ page.last_modified_at | date: '%Y-%m-%dT%H:%M:%S+00:00' }}</lastmod>
        </url>
    {%- endfor -%}

    {% assign blogs = '' | split: ',' %}

    {% for page in site.blogs %}
        {% assign blogs = blogs | push: page %}
    {% endfor %}

    {% for page in site.blogs_external %}
        {% assign blogs = blogs | push: page %}
    {% endfor %}

    {%- for page in blogs -%}
        <url>
            <loc>{{ page.url | absolute_url }}</loc>
            <lastmod>{{ page.last_modified_at | date: '%Y-%m-%dT%H:%M:%S+00:00' }}</lastmod>
        </url>
    {%- endfor -%}

    {%- for page in site.projects -%}
        <url>
            <loc>{{ page.url | absolute_url }}</loc>
            <lastmod>{{ page.last_modified_at | date: '%Y-%m-%dT%H:%M:%S+00:00' }}</lastmod>
        </url>
    {%- endfor -%}
    
</urlset>
